{
	"compilerOptions": {
		"module": "Node16",
		"target": "es2017",
		"lib": ["es2017"],
		"sourceMap": true,
		"strict": true,
		"outDir": "dist/cjs",
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node16",
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
